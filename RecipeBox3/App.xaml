<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RecipeBox3"
    xmlns:ctrls="clr-namespace:RecipeBox3.Controls"
    x:Name="Program" x:Class="RecipeBox3.App"
    Startup="Program_Startup"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:UnitManager x:Key="GlobalUnitManager"/>
            <local:CategoryManager x:Key="GlobalCategoryManager"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
