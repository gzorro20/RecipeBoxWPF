<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RecipeBox3.Controls"
        x:Name="ThisControl" x:Class="RecipeBox3.Controls.DurationEntryBox"
        mc:Ignorable="d" 
        d:DesignHeight="30" d:DesignWidth="150">

    <Grid>
        <TextBox x:Name="InputBox" LostFocus="InputBox_LostFocus" BorderThickness="2" BorderBrush="{Binding ElementName=ThisControl, Path=OutlineBrush}"/>
    </Grid>
</UserControl>
